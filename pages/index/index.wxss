/**index wxss**/
page{
    background: #f7f8fa;
}
.swiper-cen {
    width: 92%;
    margin: 0 auto;
}

.swiper-cen .swiper-item {
    border-radius: 16rpx;
}

.swiper-cen .swiper-banner-img {
    width: 100%;
    height: 100%;
}

.header-container .van-sticky-wrap {
    background: #4fc08d!important;
}

.header-container .van-search {
    padding: 0 24rpx;
}

view .category-tabs .van-tabs__nav {
    background: #4fc08d!important;
}

view .category-tabs .van-tabs__scroll {
    background-color: transparent;
}

view .category-tabs .van-tabs__line {
    background-image: linear-gradient(to right, rgba(255, 255, 255, .8), rgba(255, 255, 255, .1));
    background-color: transparent;
}

view .category-tabs .van-ellipsis {
    color: #fff;
}

view .van-search {
    padding-bottom: 0px;
}

.main {
    position: relative;
    padding-top: 10rpx;
}

.main .bg {
    width: 100%;
    height: 140px;
    position: absolute;
    z-index: -1;
    overflow: hidden;
    top: -10rpx;
}

.main .bg::after {
    content: '';
    width: 120%;
    height: 100px;
    position: absolute;
    left: -10%;
    top: 0;
    z-index: -1;
    border-radius: 0 0 60% 60%;
    background: #4fc08d;
}

.choose-tabs-bar {
    display: flex;
    justify-content: space-between;
    position: relative;
}

.choose-tabs-bar .tabs-arrow-down {
    width: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.choose-tabs-bar .tabs-arrow-down::after {
    position: absolute;
    content: '';
    left: 0;
    top: 4px;
    width: 1px;
    opacity: .5;
    height: 72px;
    background-image: linear-gradient(to right, rgba(255, 255, 255, .8), rgba(255, 255, 255, .1));
    -webkit-transform: scale(1, 0.5);
    transform: scale(1, 0.5);
    -webkit-transform-origin: left top;
    transform-origin: left top;
}

.tabs-arrow-box {
    width: 100%;
    overflow: hidden;
    position: absolute;
  
    
    left: 0;
    bottom: 0;
    transform: translateY(100%);
    background-color: #fff;
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
    padding-bottom: 20rpx;
   
    padding: 0 20rpx 20rpx;
    box-sizing: border-box;
}
.tabs-arrow-box  .mr{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-right: -20rpx;
}
.tabs-arrow-box .tabs-btn {
    font-size: 24rpx;
    width: 16.5%;
    text-align: center;
    padding: 10rpx 0;
    border-radius: 40rpx;
    margin-top: 20rpx;
    background: #f7f8fa;
    margin-right: 20rpx;
    border: solid 1px transparent;
}

.tabs-arrow-box .tabs-btn.actived {
    border: solid 1px #4fc08d;
    color: #4fc08d;
}

.main .category-grid{
    margin-top: 20rpx;
}
.main .category-grid .category-grid-item .van-grid-item__content{
    padding:10rpx 6rpx;
}
.main .category-grid .category-grid-item .van-grid-item__content .category-grid-item-name{
    font-size: 24rpx;
    margin-top: 16rpx;
}
.main .category-grid .category-grid-item .van-grid-item__content .category-grid-item-img{
    width: 50%;
    height: 60px;
}


.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
 
   display: inline-flex;
    
   justify-content:space-between;
   transition: width .3s linear;
}
.swiper-box .wx-swiper-dot::before{
   content: '';
   flex-grow: 1;  
   background: rgba(255,255,255,0.3);
   border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active{
    width:40rpx;  
} 
.swiper-box .wx-swiper-dot-active::before{
   background:#fff;  
   width:40rpx;  
}

.new-lists{
    display: flex;
    flex-wrap: wrap;
    padding: 2%;
    justify-content: space-between;


}
.new-lists .new-item{
