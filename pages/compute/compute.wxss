/**index.wxss**/

.compute_bot {
    position: fixed;
    bottom: 20rpx;
    left: 0;
    padding: 0 30rpx;
    opacity: 1;
    transition: all 1s linear;
}

.compute_bot.sideHide {
    bottom: -600px;
    opacity: 0;
}

.btn_area {
    font-size: 0;
}

.btn_area .btn {
    padding: 0;
    height: 82rpx;
    font-size: 32rpx;
    line-height: 82rpx;
    margin: 20rpx 20rpx 0 0;
    color: #8f8f8f;
}

.btn_area .btn img {
    display: inline-block;
    vertical-align: middle;
}

.btn_area .btn.btn-md-1 {
    width: 98rpx;
}

.btn_area .btn.btn-md-2 {
    width: 216rpx;
}

.btn_area .btn.btn-style-1 {
    background: #fdfcfb;
    -moz-box-shadow: 0px -5px 3px #f4f2f1 inset;
    /* For Firefox3.6+ */
    -webkit-box-shadow: 0px -5px 3px #f4f2f1 inset;
    /* For Chrome5+, Safari5+ */
    box-shadow: 0px -5px 3px #f4f2f1 inset;
    /* For Latest Opera */
}

.btn_area .btn.btn-style-2 {
    background: #f1ede8;
    -moz-box-shadow: 0px 5px 3px #f6f4f0 inset;
    /* For Firefox3.6+ */
    -webkit-box-shadow: 0px 5px 3px #f6f4f0 inset;
    /* For Chrome5+, Safari5+ */
    box-shadow: 0px 5px 3px #f6f4f0 inset;
    /* For Latest Opera */
}

.btn_area .btn.btn-style-3 {
    background: #6395ff;
    color: #fff;
    -moz-box-shadow: 0px 4px 2px rgba(246, 244, 240, .4) inset;
    /* For Firefox3.6+ */
    -webkit-box-shadow: 0px 4px 2px rgba(246, 244, 240, .4) inset;
    /* For Chrome5+, Safari5+ */
    box-shadow: 0px 4px 2px rgba(246, 244, 240, .4) inset;
    /* For Latest Opera */
}

.btn_area .btn.btn-style-4 {
    background: #ff9f22;
    color: #fff;
    -moz-box-shadow: 0px 3px 2px rgba(246, 244, 240, .4) inset;
    /* For Firefox3.6+ */
    -webkit-box-shadow: 0px 34px 2px rgba(246, 244, 240, .4) inset;
    /* For Chrome5+, Safari5+ */
    box-shadow: 0px 3px 2px rgba(246, 244, 240, .4) inset;
    /* For Latest Opera */
}

.compute_area {
    display: flex;
    flex-wrap: wrap;
    align-content: space-between;
    width: 690rpx;
    background: #404454;
    height: 126rpx;
    color: #fff;
    text-align: right;
    padding: 11px;
    box-sizing: border-box;
    border-radius: 12rpx;
    line-height: 100%;
}

.compute_area .compute_num {
    font-size: 28rpx;
}

.compute_area .compute_num {
    font-size: 36rpx;
}

.compute_area .compute_num,
.compute_area .compute_result {
    display: inline-block;
    line-height: 100%;
    width: 100%;
}

.showcom_btn {
    position: fixed;
    left: 30px;
    bottom: 200px;
    opacity: 0;
    transition: all 1s linear;
}

.showcom_btn.sideShow {
    opacity: 1;
}